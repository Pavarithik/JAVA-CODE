class Solution {
    public TreeNode buildTree(int[] preorder, int[] inorder) {
        return cTree(preorder,inorder,0,preorder.length-1);
    }
    int preIndex=0;
    private TreeNode cTree(int[] preorder,int[] inorder,int is,int ie){
        if(is > ie) return null;
        TreeNode root = new TreeNode(preorder[preIndex++]);
        int inIndex=0;
        for(int i=is;i<=ie;i++){
            if(inorder[i] == root.val){
                inIndex = i;
                break;
            }
        }
        root.left = cTree(preorder,inorder,is,inIndex-1);
        root.right = cTree(preorder,inorder,inIndex+1,ie);
        return root;
    }
}
